<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>webfx-demo-raytracer</artifactId>
        <groupId>org.webfx</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webfx-demo-raytracer-webworker-teavm</artifactId>

    <dependencies> <!-- Generated by WebFx -->
        
        <dependency>
            <artifactId>webfx-demo-raytracer-webworker</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-teavm-json-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-teavm-webassembly-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
        
        <dependency>
            <artifactId>webfx-platform-teavm-webworker-impl</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>
    
    </dependencies>

    <properties>
        <plugin.teavm.param.mainClass>webfx.demo.raytracer.webworker.teavm.TeaVmRayTracerWorkerEntryPoint</plugin.teavm.param.mainClass>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.teavm</groupId>
                <artifactId>teavm-maven-plugin</artifactId>
            </plugin>


            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>append-main</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <echo append="true" file="target/teavm/classes.js">${line.separator}main()</echo>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>